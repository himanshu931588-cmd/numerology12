<script>
    const data = {
        1: "The Leader: Born to take charge and innovate.",
        2: "The Diplomat: You thrive on harmony and partnership.",
        3: "The Artist: Creative, social, and full of life.",
        4: "The Architect: Disciplined, steady, and reliable.",
        5: "The Traveler: You seek freedom and new experiences.",
        6: "The Guardian: A natural nurturer and family-oriented.",
        7: "The Mystic: Analytical and deeply spiritual.",
        8: "The Executive: Success, wealth, and power follow you.",
        9: "The Saint: Compassionate and worldly-wise.",
        11: "The Master Intuitive: High spiritual energy.",
        22: "The Master Builder: Capable of massive achievements."
    };

    function reduce(n) {
        if (n == 11 || n == 22 || n == 33) return n;
        while (n > 9) {
            n = n.toString().split('').reduce((sum, d) => sum + parseInt(d), 0);
            if (n == 11 || n == 22) break;
        }
        return n;
    }

    function calculatePath() {
        const birthday = document.getElementById('dob').value;
        if (!birthday) return alert("Please enter your birth date!");

        const [y, m, d] = birthday.split('-');
        
        // Numerology calculation (Day + Month + Year)
        const dSum = reduce(parseInt(d));
        const mSum = reduce(parseInt(m));
        const ySum = reduce(parseInt(y));
        
        const final = reduce(dSum + mSum + ySum);

        document.getElementById('numBox').innerText = final;
        document.getElementById('meaningBox').innerText = data[final] || "A very rare and powerful destiny.";
        document.getElementById('result').style.display = 'block';
    }
</script>

